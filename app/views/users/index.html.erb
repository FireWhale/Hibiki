<% content_for :title do %>Users<% end %>

<% content_for :header do %>
  <h2 class="text-center">Users</h2>
<% end %>


<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Privacy</th>
    <th>Abilities</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, overview_user_path(user) %><br><b><%= user.status %></b></td>
    <td><%= user.email %></td>
    <td><%= user.privacy_settings.join(",") %></td>
    <td><%= user.abilities.join(",") %></td>
    <td><%= user.language_settings %></td>
    <td><%= user.updated_at.strftime("%B %d, %Y") %></td>
    <td><%= link_to 'Edit Security', edit_security_user_path(user) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
