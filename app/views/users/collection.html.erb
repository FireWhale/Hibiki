<% content_for :title do %><%= "#{@user.name}'s Collection" %><% end %>

<% content_for :header do %>
  <div class="text-center">    
    <h2><%= current_user == @user ? "Your" : "#{@user.name}'s" %> Collection</h2>
  </div>
<% end %>

<div id="collection">
  <ul id="collection-tabs" class="nav nav-tabs">
    <% ["collected", "ignored", "wishlisted"].each do |type| %>
      <li class='<%= "#{type} #{'active' if @type == "#{type}"}" %>'><%= link_to "#{type} (#{instance_variable_get("@#{type}_count")})".titleize, collection_user_path(type: type), remote: true %></li>
    <% end %>
  </ul>
  <div id="index">
    <%unless @records.nil? %>
      <%= render :partial => 'layouts/primary_models/record_list', locals: {records: @records}%>
    <% end %>
  </div>
</div>

