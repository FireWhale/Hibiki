<% content_for :title do %><%= @user.name %>'s collection<% end %>

<% content_for :header do %>
  <div class="text-center">
    <h2></h1>
    <h1><%= @user.name %>'s Collection</h1> 
  </div>
<% end %>

<% if current_user == @user or privacy_settings(@user).include? "ShowCollection"  %>
  <%= render 'layouts/albums', :divid => 'Collection', :header => 'Collected Albums', :collection => @collection %>
  <%= render 'layouts/albums', :divid => 'Wishlist', :header => 'Wishlist Albums', :collection => @wishlist %>
  <%= render 'layouts/albums', :divid => 'Ignorelist', :header => 'Ignored Albums', :collection => @ignorelist %>
<% else %>
  <h4 class="text-center">This isn't your collection!</h4>
<% end%>


