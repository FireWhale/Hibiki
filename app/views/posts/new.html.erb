<% content_for :title do %>New Post<% end %>

<% content_for :header do %>
  <div class="text-center">
    <h2>New Post</h2>
  </div>
<% end %>

<%= form_for @post, :html => {:class => "form-horizontal"} do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pst.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  

  <div class="control-group">
    <%= fields_for :message do |field| %>
      <%= field.label :message, "Message:" %>
      <%= field.text_area :message, :rows => '6' %>
    <% end %>
  </div>
  <div class="control-group">
    <%= f.label :recipient, "Destination:", :class => "control-label" %>
    <%= f.select :recipient, [['Testing Topic'],['Main Topic']], :class => "controls" %>
  </div>
  <div id="AlbumFields"></div>
  <%= link_to "Add an Album", addtopost_path(:div_id => '#AlbumFields', :fields_for => 'albums', :label => 'Album ID:', :autocomplete => 'album_namehash'), :remote => true %></br></br>   
  <div id="ArtistFields"></div>
  <%= link_to "Add an Artist", addtopost_path(:div_id => '#ArtistFields', :fields_for => 'artists', :label => 'Artist ID:', :autocomplete => 'artist_namehash'), :remote => true %></br></br>   
  <div id="SourceFields"></div>
  <%= link_to "Add a Source", addtopost_path(:div_id => '#SourceFields', :fields_for => 'sources', :label => 'Source ID:', :autocomplete => 'source_namehash'), :remote => true %></br></br>     
  <div id="OrganizationFields"></div>
  <%= link_to "Add an Organization", addtopost_path(:div_id => '#OrganizationFields', :fields_for => 'organizations', :label => 'Organization ID:', :autocomplete => 'organization_namehash'), :remote => true %></br></br>     
  <%= fields_for :seasons do |f| %>
      <%= f.label '', "Season ID:", :class => "control-label" %>
      <%= f.text_field '', :class => "controls input-medium" %>
  <% end %>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
