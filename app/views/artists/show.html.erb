<% content_for :title do %><%= name_language_helper(@artist,current_user,0, :no_bold => true) %><% end %>

<% content_for :header do %>
  <div class="text-center">
    <h2><%= name_language_helper(@artist,current_user,0, :no_bold => true) %></h1>
    <h4><%= name_language_helper(@artist,current_user,1, :no_bold => true) %>        
        <% if name_language_helper(@artist,current_user,2, :no_bold => true).nil? == false %>
          / <%= name_language_helper(@artist,current_user,2, :no_bold => true) %>
        <% end %>
    </h4> 
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-3">
    <%= render :partial => "layouts/show_primary_image", :locals => {:record => @artist} %>
    <div id="Attributes" class="well">
      <% if can? :manage, Artist %>
        <%= attribute_display(@artist, 'status', "Status") %>
        <%= attribute_display(@artist, 'db_status', "Database Status") %>
      <% end %>
      <% @related.each do |k,v| %>
        <%= linked_attribute_display(v,k) %>
      <% end %>
      <% if @artist.artist_organizations.empty? == false %>
        <b>Organization/Label:</b>
        <% @artist.artist_organizations.each do |org|%>
          <div><%= link_to name_language_helper(org.organization,current_user,0), org.organization %> (<%= org.category %>)</div>
        <% end %>
      <% end %>   
      <%= attribute_display(@artist, "debutdate", "Debut Date")%>      
      <%= attribute_display(@artist, "birthdate", "Birthdate")%>
      <%= reference_helper(@artist) %>  
      <%= linked_attribute_display(@artist.tags, "Tags")%>
    </div>
    <%= render :partial => "layouts/maintenance/admin_actions", :locals => {:record => @artist} %>
  </div>
  
  <div class="col-md-9">
    <% if @artist.info.nil? == false && @artist.info.empty? == false %>
      <div id="Info" class="well">
        <h4 class="text-center">Bio</h4>
          <%= @artist.info %>
      </div>   
    <% end %>
    <% if can? :edit, @artist %>
      <% if @artist.privateinfo.nil? == false && @artist.privateinfo.empty? == false %>
        <div id="Info" class="well">
          <h4 class="text-center">Private Info</h4>
            <%= @artist.privateinfo %>
        </div>    
      <% end %>
    <% end %>
  <%= render 'layouts/albums', :divid => 'Albums', :header => 'Albums', :collection => @collection %>
  </div>
</div>


<% content_for :usersidebar do %>
  <% if current_user %>
    <div class="well">
      <% if watched? current_user, @artist %>
        <div id="WatchLink">You're watching this artist<br>
          <%= link_to "Remove from Watchlist?", unwatch_path(:user_id => current_user.id, :watched_id => @artist.id, :watched_type => "Artist"), :remote => true %>      
        </div>
      <% else %>
        <div id="WatchLink">
          <%= link_to "Watch this artist", watch_path(:user_id => current_user.id, :watched_id => @artist.id, :watched_type => "Artist"), :remote => true %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
