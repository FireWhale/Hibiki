<% content_for :title do %>Password Reset<% end %>

<% content_for :header do %>
  <div class="text-center">
    <h2>Reset Password</h2>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<% if notice.nil? %>
  <h5>Please enter your email to request a password reset</h5>
  <%= form_for :website, url: request_password_reset_email_path, :html => {:class => 'form-horizontal'}  do |f| %>
    <%= label_tag :email, 'Email:' %>
    <%= text_field_tag :email, nil, :class => 'controls' %>
    <%= f.submit 'Submit' %>
  <% end %>
<% end %>
