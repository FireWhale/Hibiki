<%= form_for @source, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @source.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@source.errors.count, "error") %> prohibited this source from being saved:</h2>

      <ul>
      <% @source.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="Album" class="row">
    <div class="col-md-6">
      <div class="control-group">
        <%= f.label :name, "Name:", :class => "control-label" %>
        <%= f.text_field :name, :class => "controls" %>
      </div>
      <div class="control-group">
        <%= f.label :altname, "Alternate Name:", :class => "control-label" %>
        <%= f.text_field :altname, :class => "controls" %>
      </div>
      <div class="control-group">
        <%= f.label :status, "Status:", :class => "control-label" %>
        <%= f.select :status, Album::Status, :include_blank => true  %>
      </div>
      <div class="control-group">
        <%= f.label :db_status, "Database Status:", :class => "control-label" %>
        <%= f.select :db_status, Artist::DatabaseStatus, :include_blank => true %>
      </div>
      <div class="control-group">
        <%= f.label :category, "Product/Franchist: ", :class => "control-label" %>
        <%= f.select :category, Source::Categories, :include_blank => true %>
      </div>
      <div class="control-group">
        <%= f.label :activity, :class => "control-label" %>
        <%= f.select :activity, [['Retired'], ['Active'], ['Complete']], :include_blank => true %>
      </div>  
      <div id="Reference">
        <% if @source.reference.nil? == false %>
          <% @source.reference.each do |reference| %>
            <div class="row-fluid">
              <%= fields_for 'source[reference][types]' do |f| %>
                <%= f.label '', "Reference Link:", :class => "control-label" %>
                <%= f.select '', Album::ReferenceLinks, :include_blank => true, :selected => reference[0] %>     
              <% end %>
              <%= fields_for 'source[reference][links]' do |f| %>                
                <%= f.text_field '', :value => reference[1], :class=>"input-xlarge" %>
              <% end %>
            </div>
          <% end %>
        <% end %>
        <div id="ReferenceFields"></div>
        <%= link_to "Add a Reference", addreference_path(:fields_for => "source[reference]"), :remote => true %></br></br>
      </div>
      <div class="control-group">
        <%= f.label :releasedate, "Release Date:", :class => "control-label" %>
        <%= f.date_select :releasedate, :include_blank => true, :start_year => 1980 %>
      </div>
      <div class="control-group">
        <%= f.label :enddate, "End Date:", :class => "control-label" %>
        <%= f.date_select :enddate, :include_blank => true, :start_year => 1980 %>
      </div>  
      <div class ="control-group">
        <%= f.label :images, "Add Images:", class: "control-label" %>
        <%= f.file_field :images, {:multiple => true} %>
      </div> 
      <div class="well">
        <h4 class="text-center">Tags</h4>
        <%= render :partial => 'tags/edit_tags', locals: {:subject => @source } %>
      </div>
      <div class="field">
        <%= f.label :info %>
        <%= f.text_area :info, :rows => '4', class: 'col-md-12' %>
      </div>
      <div class="field">
        <%= f.label :synopsis %><br />
        <%= f.text_area :synopsis, :rows => '2', class: 'col-md-12' %>
      </div>   
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
    <div id="TextFields" class="col-md-6">  
      <div class="well">
        <%= render :partial => 'layouts/well_toggle', locals: {:divid => 'Sources', :toggleid => 'SourceToggle'} %>
        <h4 class="text-center">Related Sources</h4>
        <div id="Sources">
          <%= render :partial => 'layouts/self_relation_edit_form', locals: {:relations => @source.related_source_relations, :edit_fields => 'source[relatedsources]', :remove_fields => 'source[removerelatedsources]', :model => 'Source'} %>
          <div id="RelatedSourceFields"></div>
          <%= link_to "Add a Related Source", addrelatedmodel_path(:div_id => "#RelatedSourceFields", :model => "Source", :fields_for_cats => 'source[newsourcecategories]', :fields_for_names_or_ids => 'source[newsourceids]', :autocomplete => 'source_namehash' ), :remote => true %>         
        </div>
      </div>      
      <div class="well">
        <%= render :partial => 'layouts/well_toggle', locals: {:divid => 'Organizations', :toggleid => 'OrgToggle'} %>        
        <h4 class="text-center">Organizations</h4>
        <div id="Organizations">
          <% if @source.source_organizations.empty? == false %>
            <% @source.source_organizations.each do |relation| %>
              <div class="row-fluid">
                <%= check_box_tag 'source[removesourceorganizations][]', relation.id %>
                <%= link_to relation.organization.name, relation.organization %>
                <%= fields_for 'source[sourceorganizations]['+ relation.id.to_s + ']' do |f| %>
                    <%= f.select 'category', SourceOrganization::Categories, :selected => relation.category %>
                <% end %>             
              </div>
            <% end %>
          <% end %>
          <div id="OrganizationFields"></div>
          <%= link_to "Add an organization", addmodel_path(:div_id => "#OrganizationFields", :fields_for_names => "source[neworganizationids]", :fields_for_cats => "source[neworganizationcategories]", :category_model => "SourceOrganization", :category_constant => "Categories", :autocomplete => 'organization_namehash'), :remote => true %></br></br> 
        </div>
      </div>
      <div id="Namehash" class="well">
        <%= render :partial => 'layouts/well_toggle', locals: {:divid => 'Languages', :toggleid => 'LanguageToggle'} %>
        <h4 class="text-center">Languages</h4>
        <div id="Languages">
          <%= f.fields_for :namehash, @source.namehash do |p| %>
            <br>English:<%= p.text_field :English, :class => "input-large", :value => @source.namehash[:English] %>
            <br>Japanese:<%= p.text_field :Japanese, :class => "input-large", :value => @source.namehash[:Japanese] %>
            <br>Romaji:<%= p.text_field :Romaji, :class => "input-large", :value => @source.namehash[:Romaji] %>
            <br>Korean:<%= p.text_field :Korean, :class => "input-large", :value => @source.namehash[:Korean] %>
            <br>Romanized Korean:<%= p.text_field :RomanizedKorean, :class => "input-large", :value => @source.namehash[:RomanizedKorean] %>
          <% end %>
        </div>
      </div>
      <div class="field">
        <%= f.label :privateinfo, "Private Info" %>
        <%= f.text_area :privateinfo, :rows => '10', class: 'col-md-12' %>
      </div>   
    </div>
  </div>
<% end %>
