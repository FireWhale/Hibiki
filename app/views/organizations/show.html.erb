<% content_for :title do %><%= name_language_helper(@organization,current_user,0, :no_bold => true) %><% end %>

<% content_for :header do %>
  <div class="text-center">
    <h2><%= name_language_helper(@organization,current_user,0, :no_bold => true) %></h1>
    <h4><%= name_language_helper(@organization,current_user,1, :no_bold => true) %>
        <% if name_language_helper(@organization,current_user,2, :no_bold => true).nil? == false %>
          / <%= name_language_helper(@organization,current_user,2, :no_bold => true) %>
        <% end %>
    </h4> 
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-3">
    <%= render :partial => "layouts/show_primary_image", :locals => {:record => @organization} %>
    <div id="Attributes" class="well">
      <% if can? :manage, Organization %>
        <%= attribute_display(@organization, 'status', "Status") %>
        <%= attribute_display(@organization, 'db_status', "Database Status") %>
      <% end %>
      <%= attribute_display(@organization, "activity", "Activity")%>
      <%= attribute_display(@organization, "category", "Type of Organization")%>
      <%= attribute_display(@organization, "established", "Established")%>  
      <% @related.each do |k,v| %>
        <%= linked_attribute_display(v,k) %>
      <% end %>                    
      <%= reference_helper(@organization) %>  
      <%= linked_attribute_display(@organization.tags, "Tags")%>
    </div>
    <%= render :partial => "layouts/maintenance/admin_actions", :locals => {:record => @organization} %>
  </div>
  
  <div class="col-md-9">
    <% if @organization.info.nil? == false%>
      <% if @organization.info.empty? == false%>
        <div id="Info" class="well">
          <h4 class="text-center">Information</h4>
            <%= @organization.synopsis %>
            <%= @organization.info %>
        </div>    
      <% end %>
    <% end %>
    <% if @organization.artists.empty? == false %>
      <div id="People" class="well">
        <h4 class="text-center">Members/Artists</h4>
        <%= @organization.artists.map{|wl| link_to name_language_helper(wl,current_user,0), url_for(wl)}.join(', ').html_safe %>
      </div>   
    <% end %>    
    <%= render 'layouts/albums', :divid => 'Albums', :header => 'Albums', :collection => @collection %>
  </div>
</div>

<% content_for :usersidebar do %>
  <% if current_user %>
    <div class="well">
      <% if @organization.watched? current_user %>
      <div id="WatchLink">You're watching this label<br>
        <%= link_to "Remove from Watchlist?", unwatch_path(:user_id => current_user.id, :watched_id => @organization.id, :watched_type => "Organization"), :remote => true %>      
      </div>
      <% else %>
      <div id="WatchLink">
        <%= link_to "Watch this label", watch_path(:user_id => current_user.id, :watched_id => @organization.id, :watched_type => "Organization"), :remote => true %>
      </div>
      <% end %>
    </div>
  <% end %>
<% end %>
