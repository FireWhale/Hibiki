<%= form_for(@season, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @season.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@season.errors.count, "error") %> prohibited this season from being saved:</h2>

      <ul>
      <% @season.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, "Name:", :class => "control-label" %>
    <%= f.text_field :name, :class => "controls input-large" %>
  </div>
  <div class="control-group">
    <%= f.label :start_date, "Start Date:", :class => "control-label" %>
    <%= f.date_select :start_date %>
  </div>
  <div class="control-group">
    <%= f.label :end_date, "End Date:", :class => "control-label" %>
    <%= f.date_select :end_date, :include_blank => true %>
  </div><br>
  <div class="well">
    <h4>Sources (check to remove):</h4>
    <% @season.source_seasons.each_with_index do |sourceseason,n| %>
      <%= fields_for 'source_seasons[]', sourceseason do |field| %>
        <% if n.multiple_of?(4) %>
          <div class="row">
        <% end %>
        <div class="col-md-3">  
          <%= check_box_tag "removesource[]", sourceseason.id %>
          <%= link_to name_language_helper(sourceseason.source,current_user,0), sourceseason.source %>      
          <%= field.select 'category', SourceSeason::Categories, :class => "controls select" %>
        </div>
        <% if (n+1).multiple_of?(4) || n == @season.source_seasons.count - 1 %>
          </div>
        <% end %> 
      <% end %>
    <% end %>
    <div id="SourceFields"></div>
    <%= link_to "Add a source", addsourceforseason_path, :remote => true %></br></br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
