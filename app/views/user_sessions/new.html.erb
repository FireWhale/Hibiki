<% content_for :title do %>Login<% end %>

<% content_for :header do %>
  <h2 class="text-center">Login</h2>
<% end %>

<%= form_for @user_session, :html => {:class => "form-horizontal"}, :url => user_session_path do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation">
      <h2>Login Failed:</h2>

      <ul>
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :username, "Username: ", :class => "control-label"  %>
    <%= f.text_field :name, :class => "controls input-medium" %>  
  </div>
  <div class="control-group">
    <%= f.label :password, "Password: ", :class => "control-label" %>
    <%= f.password_field :password, :class => "controls input-medium" %>      
  </div>
  <%= f.submit "Login" %>
<% end %>

<%= link_to 'Forgot your password?', requestpasswordreset_path %>